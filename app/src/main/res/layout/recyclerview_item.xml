<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:weightSum="3">

<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="0dp"
    android:layout_height="60dp"
    android:layout_weight="1"
    android:id="@+id/recyclerCompanyThumbnail" />

<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="2"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        style="@style/company_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Usuario Nuevo"
        android:textSize="20dp"
        android:id="@+id/userNameRecyclerText"/>
    <TextView
        style="@style/company_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Usuario Nuevo"
        android:textSize="11dp"
        android:id="@+id/userTagRecyclerText"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"></View>


</LinearLayout>
<RatingBar
    style="?android:attr/ratingBarStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="17dp"
    android:layout_weight="1"
    android:numStars="5"
    android:stepSize="1.0"
    android:rating="1"
    android:isIndicator="true"
    android:id="@+id/recyclerCompanyRating" />

</LinearLayout>